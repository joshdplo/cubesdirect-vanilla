<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../partials/head'); %>
</head>

<body class="page-account">
  <%- include ('../../partials/header') %>

  <main>
    <% if(!isGuest) { %>
    <%- include ('../../partials/account-menu') %>
    <% } %>

    <h1>Order</h1>
    <h2>Order Status: <%= stringUtils.titleCase(order.orderStatus) %></h2>

    <h3>Order Items</h3>
    <ul>
      <% orderItems.forEach(item => { %>
      <li>
        <a href="/product/<%= item.Product.id %>"><img src="<%= item.Product.images[0] %>"
            alt="<%= item.Product.name %>" width="100"></a><br>
        <a href="/product/<%= item.Product.id %>"><%= stringUtils.titleCase(item.Product.name) %></a>
        (x<%= item.quantity %>)<br>
        Price: $<%= item.price.toFixed(2) %><br>
      </li>
      <% }) %>
    </ul>
    <h4>Order Total: $<%= order.totalAmount.toFixed(2) %></h4>
  </main>

  <%- include ('../../partials/footer') %>
  <%- include ('../../partials/end') %>
</body>

</html>